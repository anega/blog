<div class="post-hero d-flex justify-content-center align-items-center"
     <% if @post.image.present? %>
     style="background-image: url(<%= url_for @post.image %>)"
     <% end %>
     >
  <h1 class="text-center display-5 fw-bold m-0 px-5"><%= @post.title %></h1>
</div>
<div class="container mt-5">
  <p><%= @post.body %></p>
  <p class="text-muted">Created <%= time_ago_in_words @post.created_at %></p>

  <div class="btn-group mb-5" role="group" aria-label="Basic outlined example">
    <%= link_to 'Edit post', edit_post_path(@post), class: 'btn btn-outline-secondary' %>
    <%= link_to 'Delete post', post_path(@post), class: 'btn btn-outline-danger', data: {
      turbo_method: :delete,
      turbo_confirm: 'Are you sure?'
    } %>
  </div>

  <% if @post.comments.present? %>
    <div class="mb-5">
      <h4>Comments</h4>
      <%= render @post.comments %>
    </div>
  <% end %>

  <h4>Add a comment</h4>
  <%= render 'comments/form' %>
</div>
